	<div style="padding:10px;">
		<button id="addPublicEventBtn" class="myButton-white" data-bind="click: function (data, e) { $root.showAddPublicEventPopupOnClick($element, data, e) }" >Dodaj publiczne wydarzenie</button>
	</div>

</section>

