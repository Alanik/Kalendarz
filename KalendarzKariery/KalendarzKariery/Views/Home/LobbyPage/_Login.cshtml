@model KalendarzKarieryData.Models.AccountModels.LoginModel

<section id="loginPageContainer">
	@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm"}))
 {
		@Html.AntiForgeryToken()


		<fieldset>
			<legend>Zaloguj się</legend>
			<ol>
				<li>
					@Html.LabelFor(m => m.UserName, new {@class = "form-label"})
					@Html.TextBoxFor(m => m.UserName)
					@Html.ValidationMessageFor(m => m.UserName)
				</li>
				<li>
					@Html.LabelFor(m => m.Password, new {@class = "form-label"})
					@Html.PasswordFor(m => m.Password)
					@Html.ValidationMessageFor(m => m.Password)
				</li>
				<li>
					@Html.CheckBoxFor(m => m.RememberMe)
					@Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
				</li>
			</ol>
			<input type="button" id="loginFormBtn" class="myButton-white" value="Zaloguj sie" data-bind="click: $root.loginUserOnClick" />
		</fieldset>
		
 }

	<p>
		<a href="#" id="showRegisterFormBtn" data-bind="click:$root.showRegisterFormOnClick">Utwórz konto</a><span> jeśli jeszcze takiego nie posiadasz.</span>
	</p>

</section>



