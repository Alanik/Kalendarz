<div class="display-events-overview-body" data-bind="visible: $root.detailsPageJournalMenu.selectedMenuItem() == 1">
	<div class="legend-oldorupcoming hover-cursor-pointer" data-bind="click: function () { $root.detailsPageJournalMenu.menuItems.myCalendar.showOld( !$root.detailsPageJournalMenu.menuItems.myCalendar.showOld() ), $root.showSelectedEvents( $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents, 'old', $root.detailsPageJournalMenu.selectedEventKindValues ) }">
		<div class="oldorupcoming-text-container">
			<span class="oldorupcoming-sign" data-bind="text:$root.detailsPageJournalMenu.menuItems.myCalendar.showOld() == true ? '-' : '+'">+</span>
			<span>stare</span>
		</div>
		<span class="oldorupcoming-expand-text sm-hidden" data-bind="text: $root.detailsPageJournalMenu.menuItems.myCalendar.showOld() == true ? '[zwiń]' : '[rozwiń]'"></span>
		<span class="oldorupcoming-event-count" data-bind="text: $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents.old().length > 0 ? $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents.old().length : ''"></span>
	</div>
	<div class="display-events-overview-item-list" data-bind="visible: $root.detailsPageJournalMenu.menuItems.myCalendar.showOld, foreach: $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents.old">
		<div class="display-events-overview-item">
      <div class="overview-item-inner-wrapper" data-bind="click: function () { $root.expandEventOverviewItemOnClick( $element ) }">
        <div class="rg-inline-block">
          <div class="event-kind-tag" data-bind="text: kind.name, style: { color: kind.headerColor }"></div>
          <span class="list-item-title" data-bind="text: name"></span>
        </div>
        <div class="inline-block" style="float:right;">
          <span class="list-item-date">
            <span class="list-item-other" data-bind="text: startDate.displayFullDate()"></span>
            <span class="list-item-other" data-bind="text: startDate.displayFullTime()"></span>
          </span>
        </div>
      </div>
      <div class="event-block-expand" style="display:none;">
        @Html.Partial("_LobbyEventBlock")
      </div>
		</div>
	</div>
	<div class="legend-oldorupcoming hover-cursor-pointer" data-bind="click: function () { $root.detailsPageJournalMenu.menuItems.myCalendar.showUpcoming( !$root.detailsPageJournalMenu.menuItems.myCalendar.showUpcoming() ), $root.showSelectedEvents( $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents, 'upcoming', $root.detailsPageJournalMenu.selectedEventKindValues ) }">
		<div class="oldorupcoming-text-container">
			<span class="oldorupcoming-sign" data-bind="text: $root.detailsPageJournalMenu.menuItems.myCalendar.showUpcoming() == true ? '-' : '+'">-</span>
			<span>nadchodzące</span>
		</div>
		<span class="oldorupcoming-expand-text sm-hidden" data-bind="text: $root.detailsPageJournalMenu.menuItems.myCalendar.showUpcoming() == true ? '[zwiń]' : '[rozwiń]'">rozwin</span>
		<span class="oldorupcoming-event-count" data-bind="text: $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents.upcoming().length > 0 ? $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents.upcoming().length : ''"></span>
	</div>
	<div class="display-events-overview-item-list" data-bind="visible: $root.detailsPageJournalMenu.menuItems.myCalendar.showUpcoming, foreach: $root.detailsPageJournalMenu.menuItems.myCalendar.selectedEvents.upcoming">
		<div class="display-events-overview-item">
      <div class="overview-item-inner-wrapper" data-bind="click: function () { $root.expandEventOverviewItemOnClick( $element ) }">
        <div class="rg-inline-block">
          <div class="event-kind-tag" data-bind="text: kind.name, style: { color: kind.headerColor }"></div>
          <span class="list-item-title" data-bind="text: name"></span>
        </div>
        <div class="inline-block" style="float:right;">
          <span class="list-item-date">
            <span class="list-item-other" data-bind="text: startDate.displayFullDate()"></span>
            <span class="list-item-other" data-bind="text: startDate.displayFullTime()"></span>
          </span>
        </div>
      </div>
      <div class="event-block-expand" style="display:none;">
        @Html.Partial("_LobbyEventBlock")
      </div>
		</div>
	</div>
</div>
