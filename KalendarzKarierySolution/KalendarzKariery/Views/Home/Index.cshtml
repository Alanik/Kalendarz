@model KalendarzKarieryData.Models.ViewModels.MainViewModel
@Html.Partial( "_LoginBar" )
<div id="initialWhiteOverlay"></div>
<div id="dzieuo" style="visibility: hidden;">
	<section id="lobby" class="dz-column">
		@Html.Partial( "_Lobby" )
	</section>

	<section id="calendar" class="dz-column">
		<div id="calendarWidget" class="dz-row calendar-part" data-bind="with: $root.calendarPage.calendarPart.calendarVM" style="margin-bottom: 0px; top: 0;">
			<div id="calendarWidgetHeader">
				<div class="inline-block calendar-month-selectbox-container">
					<label for="calendarMonthSelectBox" class="block label">Miesiąc: </label>
					<select id="calendarMonthSelectBox" name="calendarMonthSelectBox" data-bind="options: $root.monthObjs, optionsText: 'name', optionsValue: 'value', value: displayDate.month"></select>
				</div>
				<div class="calendar-month-year-container">
					<button class="calendar-month-year-arrows" data-bind="click: function () { $root.redisplayCalendarAtChosenMonth( displayDate.month() - 1 ) } ">&#9660;</button>
					<span class="calendar-month-name" data-bind="text: displayDate.monthName"></span>
					<button class="calendar-month-year-arrows" data-bind="click: function () { $root.redisplayCalendarAtChosenMonth( displayDate.month() + 1 ) }">&#9650</button>
				</div>
				<div class="calendar-month-year-container">
					<button class="calendar-month-year-arrows" data-bind="click: function () { $root.redisplayCalendarAtChosenYear( displayDate.year() - 1 ) } ">&#9660;</button>
					<span data-bind="text: displayDate.year"></span>
					<button class="calendar-month-year-arrows" data-bind="click: function () { $root.redisplayCalendarAtChosenYear( displayDate.year() + 1 ) } ">&#9650</button>
				</div>
			</div>
			<div id="calendarWidgetBody">
				<!-- Calendar is added dynamically (calendarWidget.js)   -->
			</div>
		</div>
	</section>

	<section id="details" class="dz-column">
		@Html.Partial( "_Details", @Model.RegisterViewModel )
	</section>
</div>


