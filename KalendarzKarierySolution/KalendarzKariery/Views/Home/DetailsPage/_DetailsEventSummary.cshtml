<section id="detailsEventBlockList">
	<div style="border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; text-align:center; padding-bottom:20px; background: rgb(228, 223, 205); border-left: 3px solid #D7D0B8; border-right: 2px solid #D7D0B8; border-bottom: 2px solid #D7D0B8; overflow: hidden;" data-bind="foreach: detailsPageDayEvents()">
		<div class="event-block-container">
		<span style="display:none;" class="hidden-event-id" data-bind="text: id"></span>
			<div class="event-block hover-cursor-pointer" data-bind="click: function () { $root.showEventDetailsOnEventBlockClick( $element ) }">
				<div data-bind="style: { color: kind.headerColor, width: '50%', padding: '10px', marginBottom: '10px' }">
					<span data-bind="text: kind.name"></span>
				</div>
				<div class="event-block-content">
					<div><span data-bind="text: name, style: { fontSize: '1.6em', lineHeight: '1', paddingBottom: '4px' } "></span></div>
					<div style="font-size: 1.4em;"><span>godzina: </span><span data-bind="text: startDate.formatZero(startDate.startHour)"></span><span>:</span><span data-bind="	text: startDate.formatZero(startDate.startMinute)"></span><span style="padding:0 4px;"> - </span>
					<span data-bind="text: startDate.formatZero(startDate.endHour)"></span><span>:</span><span data-bind="	text: startDate.formatZero(startDate.endMinute)"></span></div>
					<div data-bind="if: address.street">
					<span>adres: </span><span data-bind="text: address.street"></span><span>, </span><span data-bind="	text: address.city"></span>
					</div>
				</div>
				<div class="event-block-footer">
				</div>
			</div>
			@Html.Partial("_EventInfo")
		</div>
	</div>

</section>





