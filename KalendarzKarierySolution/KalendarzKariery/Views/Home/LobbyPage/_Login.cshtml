@model KalendarzKarieryData.Models.AccountModels.LoginModel

<div id="loginPageContainer" class="flat-form">
  <div class="form-header">
    <i data-bind="click: closeLoginPopupOnClick" class="btn-close md-icon-hover md-icon-rg mdi mdi-window-close"></i>
  </div>
  <div class="form-body">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
          <legend>Logowanie</legend>

          <div class="div-separator">
            @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
            <div>
              @Html.ValidationMessageFor(m => m.UserName)
            </div>
            @Html.TextBoxFor(m => m.UserName)
          </div>
          <div class="div-separator">
            @Html.LabelFor(m => m.Password, new { @class = "form-label" })
            <div>
              @Html.ValidationMessageFor(m => m.Password)
            </div>
            @Html.PasswordFor(m => m.Password)
          </div>
          <div class="div-separator">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
          </div>

          <input type="button" id="loginFormBtn" class="btn-add green-color hover-cursor-pointer" value="Zaloguj sie" data-bind="click: $root.loginUserOnClick" />
        </fieldset>
    }

    <div style="text-align:right;margin-top:20px;font-size:.8em;">
      <a id="showRegisterFormBtn" class="green-color hover-cursor-pointer" href="#" data-bind="click: $root.showRegisterFormOnClick">Utwórz konto</a><span style="color:gray;"> jeśli jeszcze takiego nie posiadasz.</span>
    </div>

  </div>
</div>


