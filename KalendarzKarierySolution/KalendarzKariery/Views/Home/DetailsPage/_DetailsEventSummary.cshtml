<section id="detailsEventBlockList">
	<div style="overflow: hidden;" data-bind="foreach: detailsPageDayEvents()">
		<div class="details-event-block-container">
		<span style="display:none;" class="hidden-event-id" data-bind="text: id"></span>
			<div class="details-event-block">
				<div data-bind="style: { color: kind.headerColor, background: 'rgb(130,130,130)', border: '1px solid rgb(221, 221, 221)', padding: '10px', marginBottom: '10px' }">
					<span data-bind="text: kind.name"></span>
				</div>
				<div class="event-block-content">
					<div><span data-bind="text: name, style: { fontSize: '1.6em', lineHeight: '1', paddingBottom: '4px' } "></span></div>
					<div>godzina rozpoczęcia: <span data-bind="text: startDate.startHour"></span><span>: </span><span data-bind="	text: startDate.startMinute"></span></div>
					<div>godzina zakończenia: <span data-bind="text: startDate.endHour"></span><span>: </span><span data-bind="	text: startDate.endMinute"></span></div>
					<div>data: <span data-bind="text: startDate.day"></span><span>/</span><span data-bind="	text: startDate.month"></span><span>/</span><span data-bind="	text: startDate.year"></span></div>
					<div>adres: <span data-bind="text: address.street"></span><span>, </span><span data-bind="	text: address.city"></span></div>
				</div>
				<div class="details-eventblock-footer">
					<div class="details-eventblock-show-link link" data-bind="click: function () { $root.showEventInfoOnClick($element) }"><span>pokaż</span></div>
				</div>
			</div>
			@Html.Partial("_DetailsEventInfo")
		</div>
	</div>

</section>





