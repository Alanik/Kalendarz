						slide_easing: 'easeInOutCubic',
						slide_speed: 600,
						pagination: true,
						hashchange: true,
						scrollable: true
					});

					$(".slides-pagination a").on("click", function(){
					
						var hash = $(this).attr("href");
						if (hash === "#2") {
							var $scrollable = $("#slide-item-details").parent();
							
							setTimeout(function(){				
