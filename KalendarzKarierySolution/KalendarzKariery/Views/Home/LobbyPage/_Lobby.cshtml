							<div class="menu-item-number-upcoming" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[6].events.upcoming() != 0 ? $root.publicEventTreeCountBasedOnEventKind[6].events.upcoming() : '-'"></div>
							@*<div class="menu-item-number-old" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[7] ? $root.publicEventTreeCountBasedOnEventKind[7].events.old() : 0"></div>*@
						</div>
					</div>
				</div>

				@Html.Partial( "_LobbyAllSelectedEventsList" )

			</div>
		</div>
		@Html.Partial( "_lobbyEventSummary" )
		@Html.Partial( "_lobbyNews" )
	</div>
	<div style="height: 200px; width: 200px;">
	</div>
	<footer class="lobby-footer">
		Kalendarz Kariery 2014, wszelkie prawa zastrzezone
	</footer>

</div>



