<div class="lobby-content-container">
	<div class="lobby-content-body">
		<div id="lobby-menu-header" class="site-menu-header">
			<div id="lobbyLogo">
			</div>

			@if (!Request.IsAuthenticated)
   {
				<div id="loginLinkContainer">
					<span data-bind="click: showLoginFormOnClick" id="loginSpanLink" class="login-link link">Zaloguj sie</span>
					<span id="registerSpanLink" data-bind="click: showRegisterFormOnClick" class="login-link link">Stwórz konto</span>
				</div>

				@Html.Partial( "_Login", new KalendarzKarieryData.Models.AccountModels.LoginModel() )
				@Html.Partial( "_Register", new KalendarzKarieryData.Models.ViewModels.RegisterViewModel() )
			 
   }
   else
   {
				<div style="text-align: right; color: rgb(182, 182, 182); position: relative; top: 30px;">
					<span class="loggedIn-nickname">@User.Identity.Name</span>
					@using (Html.BeginForm( "LogOff", "Account", FormMethod.Post, new { id = "logoutForm" } ))
	 {
						@Html.AntiForgeryToken()
						<a style="color: rgb(255, 109, 109);" href="javascript:document.getElementById('logoutForm').submit()">wyloguj</a>
	 }
				</div> 
   }

			<div style="font-size: 2em; color: rgb(252, 251, 250); text-align: center; padding-top: 80px;">
				Twój osobisty kalendarz stworzony na miare Twoich potrzeb.
			</div>

			@Html.Partial( "_LobbyLoggedInBar" )

			<div class="title-header">/Tablica wydarzeń/</div>

			<div id="lobbyEventsMenuContainer">
				<div style="height:100px;">
					<div class="menu-item-container" data-bind="click: function () { $root.showSelectedEventsOnMenuItemClick( $element, $root.lobbyPageSelectedEvents ) }">
						<div class="border-item wydarzenia-border-tab"></div>
						<div class="menu-item" data-eventkind="1">
							<span>Wydarzenia</span>
						</div>
						<div class="menu-item-number-container">
							<div class="menu-item-number-upcoming" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[0].events.upcoming() != 0 ? $root.publicEventTreeCountBasedOnEventKind[0].events.upcoming() : '-'"></div>
							@*<div class="menu-item-number-old" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[1] ? $root.publicEventTreeCountBasedOnEventKind[1].events.old() : 0"></div>*@
						</div>
					</div>

					<div class="menu-item-container" data-bind="click: function () { $root.showSelectedEventsOnMenuItemClick( $element, $root.lobbyPageSelectedEvents ) }">
						<div class="border-item lekcje-border-tab"></div>
						<div class="menu-item" data-eventkind="2">
							<span>Lekcje</span>

						</div>
						<div class="menu-item-number-container">
							<div class="menu-item-number-upcoming" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[1].events.upcoming() != 0 ? $root.publicEventTreeCountBasedOnEventKind[1].events.upcoming() : '-'"></div>
							@*<div class="menu-item-number-old" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[2] ? $root.publicEventTreeCountBasedOnEventKind[2].events.old() : 0"></div>*@
						</div>
					</div>

					<div class="menu-item-container" data-bind="click: function () { $root.showSelectedEventsOnMenuItemClick( $element, $root.lobbyPageSelectedEvents ) }">
						<div class="border-item zajecia-border-tab"></div>
						<div class="menu-item" data-eventkind="3">
							<span>Zajęcia</span>
						</div>
						<div class="menu-item-number-container">
							<div class="menu-item-number-upcoming" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[2].events.upcoming() != 0 ? $root.publicEventTreeCountBasedOnEventKind[2].events.upcoming() : '-'"></div>
							@*<div class="menu-item-number-old" data-bind="text: $root.publicEventTreeCountBasedOnEventKind[3] ? $root.publicEventTreeCountBasedOnEventKind[3].events.old() : 0"></div>*@
						</div>
					</div>

					<div class="menu-item-container" data-bind="click: function () { $root.showSelectedEventsOnMenuItemClick( $element, $root.lobbyPageSelectedEvents ) }">
