<section class="lobby-overview">
	<div class="inline-block" style="width: 50%;">
		<div class="overview-events-list-container">
			<h3 class="dashboard-title">Nadchodzące wydarzenia</h3>
			<ul data-bind="foreach: $root.lobbyPage.dashboardPart.upcomingPublicEventsVM">
				@Html.Partial( "_EventListItem" )
			</ul>
		</div>
		<div class="overview-events-list-container">
			<h3 class="dashboard-title">Najnowsze wydarzenia
			</h3>
			<ul data-bind="foreach: $root.lobbyPage.dashboardPart.recenlyAddedPublicEventsVM">
				@Html.Partial( "_EventListItem" )
			</ul>
		</div>
	</div>
	<div class="inline-block" style="width: 50%; float: right; width: 48%; margin-left: 1%; margin-top: 1%; color: white;">
		<div class="overview-events-list-container">
			<h3 class="dashboard-calendar-title">Mój kalendarz</h3>

			<h4 style="font-weight: normal; color: #616161;">dzisiaj</h4>


			<ul class="dashboard-calendar-list today-dashboard-list" style="background: #a7a2a2;" data-bind="foreach: $root.lobbyPage.dashboardPart.myCalendarVM.today">
				@Html.Partial( "_EventListItem" )
			</ul>

			<h4 style="font-weight: normal; color: #616161;">jutro</h4>


			<ul class="dashboard-calendar-list" data-bind="foreach: $root.lobbyPage.dashboardPart.myCalendarVM.tommorow">
				@Html.Partial( "_EventListItem" )
			</ul>

			<h4 style="font-weight: normal; color: #616161;">pojutrze</h4>


			<ul class="dashboard-calendar-list" data-bind="foreach: $root.lobbyPage.dashboardPart.myCalendarVM.dayAfterTommorow">
				@Html.Partial( "_EventListItem" )
			</ul>

		</div>
	</div>
</section>
