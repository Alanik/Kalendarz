<script type="text/javascript">

	$(function () {

		var mainProgram = {
			Initialize: function () {

				var $calendar = $("#calendar");
				var $details = $("#details");
				var $lobby = $("#lobby");

				var date = new Date();
				$calendar.calendarWidget({
					month: date.getMonth(), year: date.getFullYear()
				});

				var currentWeekday = $calendar.find(".today-cell").attr("weekday");

				var calendarViewModel = new CalendarViewModel(date.getFullYear(), date.getMonth() + 1, date.getDate(), currentWeekday, '@User.Identity.Name');

				var indexViewModel = @Html.Raw(Json.Encode(@Model));

				calendarViewModel.eventPrivacyLevels = indexViewModel.PrivacyLevels;
				calendarViewModel.eventKinds = indexViewModel.EventKinds;

				if (indexViewModel.MyEventsGroupedByMonth) {
					//console.log(indexViewModel.MyEventsGroupedByMonth);

					var eventTreeBuilder = new EventTreeBuilder(indexViewModel.MyEventsGroupedByMonth, calendarViewModel.eventTree);
					eventTreeBuilder.build();
				
					////////////////////////////////////////////
					//console.log(calendarViewModel.eventTree);
					////////////////////////////////////////////		

					/////////////////////////////////////////////////////////////////////////
					//assign calendarViewModel.myEvents and draw events to the calendar
					/////////////////////////////////////////////////////////////////////////
					var yearProp = calendarViewModel.eventTree[calendarViewModel.calendarPageDisplayDate.year()];
					var events, len, month, event;

					if (yearProp) {
						month = yearProp[calendarViewModel.calendarPageDisplayDate.month()]

						if (month) {
							for (var days in month) {
								events = month[days];
								len = events.length;
								for (var i = 0; i < len; i++) {
									event = events[i];
									calendarViewModel.myEvents.push(event);
									calendarViewModel.drawEventToCalendar(event);
								}
							}
						}					
					}

					//console.log(calendarViewModel.myEvents);
				}
